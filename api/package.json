{
  "name": "seismistats-api",
  "version": "2.0.0-alpha.1",
  "description": "SeismiStats API Server - Earthquake data aggregation and chart endpoints",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:seed": "tsx src/db/seed.ts"
  },
  "dependencies": {
    "fastify": "^5.0.0",
    "@fastify/cors": "^10.0.0",
    "@fastify/sensible": "^6.0.0",
    "@sinclair/typebox": "^0.32.0",
    "kysely": "^0.27.0",
    "pg": "^8.12.0",
    "node-cron": "^3.0.3",
    "dotenv": "^16.4.0",
    "date-fns": "^4.1.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/pg": "^8.11.0",
    "@types/node-cron": "^3.0.11",
    "typescript": "^5.6.0",
    "tsx": "^4.19.0",
    "eslint": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
